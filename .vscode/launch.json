{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "port": 9229,
      "restart": true,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/api/build/**/*.js"
      ],
      "localRoot": "${workspaceFolder}/api",
      "remoteRoot": "${workspaceFolder}/api"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Craco Build",
      "program": "${workspaceFolder}/app/website/node_modules/@craco/craco/dist/scripts/build.js",
      "cwd": "${workspaceFolder}/app/website",
      "args": ["--verbose"],
      "console": "integratedTerminal"
    }
  ]
}
