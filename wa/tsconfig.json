{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "downlevelIteration": true
  },
  "include": ["../core/**/*.ts", "../app/website/src/modules/**/*.tsx"]
}
